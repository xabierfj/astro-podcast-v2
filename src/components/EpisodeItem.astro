---

const { title, slug, description, date, media, duration, image } = Astro.props

---
<div>
  <div class="flex items-center justify-center max-w-[80rem] gap-4 p-4">
    <a href={slug} class="flex-shrink-0"> {/* Use flex-shrink-0 */}
      <img
        src={image}
        alt={title}
        class="shadow-lg rounded-md w-[4.5rem] h-[4.5rem] md:w-24 md:h-24 object-cover"
        width="96"
        height="96"
        loading="lazy" 
      />
    </a>
    <div class="grow w-full overflow-hidden min-w-0">
      <a href={slug}>
        <h2 class="text-sm md:text-xl font-semibold truncate">
          {title}
        </h2>
        <p class="text-xs font-medium opacity-60">
          <span class="duration">{duration}</span>
          <span class="mx-1">â€¢</span>
          <time class="date">{date}</time>
        </p>
        <p class="my-1 text-xs md:text-sm line-clamp-2">
          {description}
        </p>
      </a>
    </div>
    <label class="flex-shrink-0">
      <div class="fill-current">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-player-play-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M6 4v16a1 1 0 0 0 1.524 .852l13 -8a1 1 0 0 0 0 -1.704l-13 -8a1 1 0 0 0 -1.524 .852z" stroke-width="0" fill="currentColor"></path>
        </svg>
      </div>
    </label>
  </div>
  <hr class="my-3 border-theme-red opacity-65" /> 
</div>