---
interface Props {
  name: string;
  img?: string;
  bluesky?: string;
}

const { name, img, bluesky } = Astro.props;
---

<li class="flex items-center gap-3">
  {img && (
    <img src={img} alt={name} class="w-12 h-12 rounded-full object-cover shadow" loading="lazy" />
  )}
  <div>
    <p class="font-medium text-gray-800 dark:text-gray-100">{name}</p>
    {bluesky && (
      <a 
        href={bluesky} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="text-xs text-blue-500 hover:text-blue-700 dark:hover:text-blue-400 transition-colors"
      >
        Bluesky
      </a>
    )}
  </div>
</li>