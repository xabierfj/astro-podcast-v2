---
import podcastInfo from "../lib/podcast-info";
import PlatformButton from "./PlatformButton.astro";
import HostCard from "./HostCard.astro";

const { title, description, platforms, hosts } = podcastInfo;
---

<div class="flex flex-col h-full p-4 md:p-6 scrollbar-thin">
  <div class="text-center mb-2">
    <div class="w-48 sm:w-48 md:w-56 mx-auto mb-4 overflow-hidden rounded-lg shadow-lg shadow-neutral-950">
      <img class="w-full h-auto" src="/logo.webp" alt={`${title} Logo`} />
    </div>
    <h1 class="text-2xl md:text-2xl font-bold text-theme-text">
      {title}
    </h1>
    <p class="mt-2 text-sm md:text-base text-theme-text leading-relaxed">
      {description}
    </p>
  </div>

  <div class="mb-2">
    <h2 class="text-xl font-semibold mb-3 text-theme-text dark:text-theme-primary">Escúchanos en</h2>
    <div class="flex flex-row space-x-4 join">
      <PlatformButton href={platforms.spotify} label="Spotify" />
      <PlatformButton href={platforms.ivox} label="Ivoox" />
    </div>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-3 text-theme-text dark:text-theme-text">Presentado por</h2>
    <ul class="space-y-4">
      {hosts.map((host) => <HostCard name={host.name} img={host.img} bluesky={host.bluesky} />)}
    </ul>
  </div>
  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-3 text-theme-text dark:text-gray-200">Síguenos / Apóyanos</h2>
    <div class="flex flex-row space-x-4 join pb-2.5">
      <PlatformButton href={platforms.bluesky} label="Bluesky" />
      <PlatformButton href={platforms.instagram} label="Instagram" />
    </div>
    <div class="mt-3 p-3 border-t border-theme-accent dark:border-theme-accent">
      <a href={platforms.kofi} target="_blank" rel="noopener noreferrer" class="font-semibold hover:text-theme-accent transition-colors">
        Apoya en Ko-fi
      </a>
    </div>
  </div>
</div>
