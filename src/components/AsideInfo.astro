---
import podcastInfo from '../lib/podcast-info'
---

<div class="flex flex-col h-full p-4 md:p-6 scrollbar-thin"> 
  <div class="text-center mb-2">
    <div class="w-48 sm:w-48 md:w-56 mx-auto mb-4 overflow-hidden rounded-lg shadow-lg">
      <img class="w-full h-auto" src='/logo.webp'alt={`${podcastInfo.title} Logo`} />
    </div>
    <h1 class="text-2xl md:text-2xl font-bold text-theme-red dark:text-white">
      {podcastInfo.title}
    </h1>
    <p class="mt-2 text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed">
      {podcastInfo.description}
    </p>
  </div>

  {(podcastInfo.platforms.spotify || podcastInfo.platforms.ivox) && (
    <div class="mb-2">
      <h2 class="text-xl font-semibold mb-3 text-gray-700 dark:text-gray-200">Escúchanos en</h2>
      <div class="flex flex-row space-x-4 join">
        {podcastInfo.platforms.spotify && (
          <a
            href={podcastInfo.platforms.spotify} 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label="Listen on Spotify"
            class="rounded-md bg-theme-red py-2 px-4 border border-transparent text-center text-sm text-theme-brown transition-all shadow-md hover:shadow-lg focus:shadow-none active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
            Spotify
          </a>
        )}
        {podcastInfo.platforms.ivox && (
          <a 
            href={podcastInfo.platforms.ivox} 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label="Listen on iVoox"
            class="rounded-md bg-theme-red py-2 px-4 border border-transparent text-center text-sm text-theme-brown transition-all shadow-md hover:shadow-lg focus:shadow-none active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
            Ivoox
          </a>
        )}
      </div>
    </div>
  )}
    {podcastInfo.hosts && podcastInfo.hosts.length > 0 && (
      <div class="mb-6">
        <h2 class="text-xl font-semibold mb-3 text-gray-700 dark:text-gray-200">Presentado por</h2>
        <ul class="space-y-4">
          {podcastInfo.hosts.map(host => (
            <li class="flex items-center gap-3">
              {host.img && (
                <img src={host.img} alt={host.name} class="w-12 h-12 rounded-full object-cover shadow" />
              )}
              <div>
                <p class="font-medium text-gray-800 dark:text-gray-100">{host.name}</p>
                {host.bluesky && (
                  <a href={host.bluesky} target="_blank" rel="noopener noreferrer" class="text-xs text-blue-500 hover:text-blue-700 dark:hover:text-blue-400 transition-colors">
                    Bluesky
                  </a>
                )}
              </div>
            </li>
          ))}
        </ul>
      </div>
    )}
  
  {(podcastInfo.platforms.bluesky || podcastInfo.platforms.instagram || podcastInfo.platforms.kofi) && (
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-3 text-gray-700 dark:text-gray-200">Síguenos / Apóyanos</h2>
      <ul class="space-y-2">
        {podcastInfo.platforms.bluesky && (
          <li><a href={podcastInfo.platforms.bluesky} target="_blank" rel="noopener noreferrer" class="hover:text-theme-red dark:hover:text-theme-red-light transition-colors">Bluesky (Podcast)</a></li>
        )}
        {podcastInfo.platforms.instagram && (
          <li><a href={podcastInfo.platforms.instagram} target="_blank" rel="noopener noreferrer" class="hover:text-theme-red dark:hover:text-theme-red-light transition-colors">Instagram</a></li>
        )}
        {podcastInfo.platforms.kofi && (
          <li class="mt-3 pt-3 border-t border-gray-700 dark:border-gray-600"><a href={podcastInfo.platforms.kofi} target="_blank" rel="noopener noreferrer" class="font-semibold hover:text-theme-red dark:hover:text-theme-red-light transition-colors">Apoya en Ko-fi</a></li>
        )}
      </ul>
    </div>
  )}
</div>

<style>
  .hover\:text-spotify-green:hover { color: #1DB954; }
  .hover\:text-ivoox-orange:hover { color: #FF6600; }
</style>