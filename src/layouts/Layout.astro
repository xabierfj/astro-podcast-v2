---
import AsideInfo from '../components/AsideInfo.astro'
import { Player } from '@/components/Player'
import './src/styles/global.css'

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Proletario y Parasito", 
  description = "El podcast que no predijeron los simpsons. Si eres de los que todo te sale a pedir de Milhouse, este es tu podcast." 
} = Astro.props;
---
<!doctype html>
<html lang="es" class="scroll-smooth"> 
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content="Protelario y Parasito">
    <meta property="og:description" content="">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Protelario y Parasito"> 
	</head>
	<body class="w-screen overflow-x-hidden scroll-smooth">
		<div id="app" class="relative h-screen p-2 gap-2">
			<aside class="[grid-area:aside] rounded-lg flex-col flex overflow-y-auto bg-theme-test-bg bg-theme-background scrollbar-thin">
				<AsideInfo />
			</aside>
			<main class="[grid-area:main] rounded-lg overflow-y-auto w-full bg-theme-background" >
				<slot />
			</main>
			<footer class="[grid-area:player] h-[80px] bg-theme-background rounded-lg">
        <!-- <Player client:only="react"  /> -->
      </footer>
		</div>
	</body>
</html>

<style is:global>
	#app {
		display: grid;
    grid-template-areas:
    	"aside main"
      "player player";
    grid-template-columns: 350px 1fr;
    grid-template-rows: 1fr auto;
		height: 100vh;
    gap: 0.5rem;
    padding: 0.5rem;
	}
	html {
		background: #010101;
		color: white;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	.scrollbar-thin {
		scrollbar-width: thin;
		scrollbar-color: #4A5568 #2D3748; /* Example: gray-600 gray-800 */
	}
	.scrollbar-thin::-webkit-scrollbar {
		width: 8px;
	}
	.scrollbar-thin::-webkit-scrollbar-track {
		background: #2D3748; /* Example: gray-800 */
	}
	.scrollbar-thin::-webkit-scrollbar-thumb {
		background-color: #4A5568; /* Example: gray-600 */
		border-radius: 4px;
		border: 2px solid #2D3748; /* Example: gray-800 */
	}
</style>
