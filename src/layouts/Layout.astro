---
import Player from '../components/Player.astro'
import AsideInfo from '../components/AsideInfo.astro'
import './src/styles/global.css'

interface Props {
  title?: string
}

const { title = "Protelario y Parasito" } = Astro.props
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content="El podcast que no predijeron los simpsons" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:title" content="Protelario y Parasito">
    <meta property="og:description" content="">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Protelario y Parasito"> 
	</head>
	<body class="w-screen overflow-x-hidden scroll-smooth">
		<div id="app" class="relative h-screen p-2 gap-2">
			<aside class="[grid-area:aside] rounded-lg flex-col flex overflow-y-auto bg-theme-test-bg bg-theme-dark">
				<AsideInfo />
			</aside>
			<main class="[grid-area:main] rounded-lg overflow-y-auto w-full bg-theme-dark" >
				<slot />
			</main>
			<footer class="[grid-area:player] h-[80px]">
				<Player />
			</footer>
		</div>
	</body>
</html>

<style>
	#app {
		display: grid;
    grid-template-areas:
    	"aside main"
      "player player";
    grid-template-columns: 350px 1fr;
    grid-template-rows: 1fr auto;
	}
	html {
		background: #010101;
		color: white;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
